package com.de4bi.study.security.corespringsecurityboard.security.service;

import java.util.LinkedHashMap;
import java.util.List;

import com.de4bi.study.security.corespringsecurityboard.security.repository.ResourceRepository;

import org.springframework.boot.autoconfigure.web.WebProperties.Resources;
import org.springframework.security.access.ConfigAttribute;
import org.springframework.security.web.util.matcher.RequestMatcher;
import org.springframework.stereotype.Service;

import lombok.RequiredArgsConstructor;

@RequiredArgsConstructor
@Service
public class SecurityResourceService {
    
    private final ResourceRepository resourceRepository;


    public LinkedHashMap<RequestMatcher, List<ConfigAttribute>> getResourceList() {
        
        LinkedHashMap<RequestMatcher, List<ConfigAttribute>> result = new LinkedHashMap<>();
        List<Resources> resourcesList = resourceRepository.findAllResources();
    }
}

/* 강의 건너뜀으로 인한 코드 누락으로 이전강의로 되돌아감. 추후 다시 작업. */